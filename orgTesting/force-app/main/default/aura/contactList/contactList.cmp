<!--the force:appHostable interface enables your component to be surfaced in Lightning experience and the salesforce mobile app as
tabs-->
<aura:component implements="force:appHostable" controller="ContactController"> <!--wiring de apex controller classs-->
    <!--Handle cmp init in a client-side controller. This loads the contact data during initialization -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <!--Dinamically load the list of contacts-->
    <aura:attribute name="contacts" type="Contact[]"/>
    <!--contactList component is an attribute to store the filtered list of contacts when an option is selected -->
    <aura:attribute name="contactList" type="Contact[]"/>
    <aura:attribute name="totalContacts" type="Integer"/>

    <!--Page header with a counter that displays total number of contacts-->
    <div class="slds-page-header slds-page-header_object-home">
        <!--lightning:layout components creates grids to align your content in the view with Lightning design system css classes-->
        <lightning:layout>
            <lightning:layoutItem>
                <lightning:icon iconName="standard:contact"/>
            </lightning:layoutItem>
            <lightning:layoutItem class="slds-m-left_small">
                <p class="slds-text-title_caps slds-line-height_reset">Contacts</p>
                <h1 class="slds-page-header__title slds-p-right_x-small">Contact Viewer</h1>
            </lightning:layoutItem>
        </lightning:layout>

        <lightning:layout> 
            <lightning:layoutItem>
                <p class="slds-text-body_small">{!v.totalContacts} Contacts Â· View Contacts Based on Lead Source</p>
            </lightning:layoutItem>
        </lightning:layout>
    </div>

    <!--Body with dropdown menu and list of contacts-->
    <lightning:layout>
        <lightning:layoutItem padding="horizontal-medium">
            <!--create dropdown menu with option's. When you select an option in the dropdown
menu, the onchange event handler calls your client-side controller to update the view with a subset of the contacts-->
            <lightning:select aura:id="select" label="Lead Source" name="source" onchange="{!c.handleSelect}" class="slds-m-bottom_medium">
                <option value="">-- Select a Lead Source Option --</option>
                <option value="Web" text="Web"/>
                <option value="Partner Referral" text="Partner Referral"/>
                <option value="All" text="All"/>
            </lightning:select>

            <!--iteramos sobre la lista de contactos and display them-->
            <aura:iteration var="contact" items="{!v.contacts}">
                <c:contacts contact="{!contact}"/>
            </aura:iteration>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>	
