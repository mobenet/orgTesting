<aura:component>
    <aura:attribute name="item" type="Camping_Item__c" required="true"/>
    <aura:registerEvent name="updateItem" type="c:addItemEvent"/>
    <lightning:card title="{!v.item.Name}" iconName="standard:scan_card"
                    class="{!v.item.Packed__c ? 'slds-theme_succes': ''}">


    <p class="slds-text-heading_medium slds-p-horizontal_small">
        Name: {!v.item.Name}</p>
    <p class="slds-p-horizontal_small">
        
        Price: <lightning:formattedNumber value="{!v.item.Price__c}"  /></p>
    <p class="slds-p-horizontal_small">
        Quantity: <lightning:formattedNumber value="{!v.item.Quantity__c}"/></p>
    <p>Packed? <lightning:input type="toggle" 
                                label="Packed" 
                                name="Packed" 
                                checked="{!v.item.Packed__c}"
                                class="slds-p-around_small"
                                messageToggleActive = "Yes"
                                messageToggleInactive = "No"
                                onchange="{!c.clickPacked}"/></p>
    </lightning:card>
</aura:component>	